<%- include("./partials/head", {title:"login"}) %> 
<body>
	<%- include('partials/headerNavbar') %>
    <div class="container"></div>
   
    <div class="row">
        
        <div class="col-6 mx-auto">
          
            <div class="card">
                <div class="card-body">
                    <form action="" method="post">
                      <h1 >Perfil</h1>
                      <div class="col-2 mx-auto">
                        <img src="<%= /http/.test(user.avatar) ? user.avatar : "/images/avatars/" + user.avatar %>"
                        width="100px" class="rounded-circle shodow" alt="">
                    </div> 
                      <div class="mb-3">
                        <label for="name" class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="name" id="name" value="<%= user.name %>">
                        
                      </div>
                      <div class="mb-3">
                        <label for="surname" class="form-label">Apellido</label>
                        <input type="text" class="form-control" name="surname" id="surname" value="<%= user.surname %>">
                        
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label" >Email</label>
                        <input type="email" class="form-control" name="email" id="email" value="<%= user.email %>">
                        
                      </div>
                      <div class="mb-3">
                        <label for="surname" class="form-label">Rol</label>
                        <input type="text" class="form-control" name="rol" id="rol" value="<%= user.rol %>">
                        
                      </div>
                    
                      </form>
                </div>
            </div>
        </div>      
    </div>  
	
	<%- include("./partials/footer") %> 
</body>
</html>